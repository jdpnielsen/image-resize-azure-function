# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
tab_width = 2

[*.{json,uda,csproj}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,cshtml}]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

